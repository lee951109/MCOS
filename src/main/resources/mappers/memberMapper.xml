	</update> -->
	
	<insert id="executiveregister">
	    INSERT INTO MEMBER(USERID,USERPASS,USERNAME,EMAIL,HIREDATE,SALARY,AUTH) 
	    VALUES(#{userId},#{userPass},#{userName},#{email},#{hiredate},#{salary},'ROLE_MEMBER,ROLE_ADMIN')
    </insert>
	
	
</mapper>













